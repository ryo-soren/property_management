<h2>Application</h2>
<p><%=@application.first_name%></p>
<p><%=@application.last_name%></p>
<p><%=@application.age%></p>
<p><%=@application.occupants%></p>
<p><%=@application.phone_number%></p>
<p><%=@application.sin%></p>
<p><%=@application.content%></p>
<%= form_for([@application.property, @application]) do |fa| %>
  <%= fa.hidden_field :status, :value => 1 %>
  <%= fa.submit "Approve", class: "btn btn-large btn-success" %>
<% end %>
<%= form_for([@application.property, @application]) do |fr| %>
  <%= fr.hidden_field :status, :value => 2 %>
  <%= fr.submit "Reject", class: "btn btn-large btn-danger" %>
<% end %>
